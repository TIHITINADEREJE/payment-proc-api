		<salesforce:basic-connection username="${sf.userName}" password="${sf.password}" securityToken="${sf.securityToken}" url="${sf.authorizationURL}" />
	</salesforce:sfdc-config>
	<http:request-config name="payment_Sys_Request_configuration" doc:name="HTTP Request configuration" doc:id="a7060f02-c6ea-4d6d-8c28-68c57edd2266" >
		<http:request-connection host="${payment.system.host}" port="${payment.system.port}" />
	</http:request-config>
	<configuration-properties doc:name="Configuration properties" doc:id="3172676b-b7dc-4201-8a0b-31e8d5f630cb" file="properties/${env}.yaml" />
